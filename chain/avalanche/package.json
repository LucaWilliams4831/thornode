{
  "name": "hardhat-project",
  "version": "1.0.0",
  "description": "Thorchain Avalanche Router",
  "main": "index.js",
  "private": false,
  "license": "MIT",
  "scripts": {
    "accounts": "hardhat accounts",
    "balances": "hardhat balances",
    "compile": "hardhat compile",
    "console": "hardhat console",
    "coverage": "hardhat coverage",
    "deploy": "yarn hardhat run scripts/deploy.ts",
    "lint": "yarn prettier && yarn lint:ts && yarn lint:solidity",
    "lint:ts": "yarn eslint '**/*.{js,ts}'",
    "lint:solidity": "yarn solhint src/**/*.sol",
    "lint:fix": "yarn solhint src/**/*.sol --fix && yarn eslint '**/*.{js,ts}' --fix",
    "prettier": "prettier '**/*.{json,sol,md}' --write",
    "clean": "rm -rf node_modules artifacts cache typechain-types deployments",
    "test": "yarn hardhat test",
    "local-node": "hardhat node --fork https://api.avax.network/ext/bc/C/rpc"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.6.0",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.32",
    "avalanche": "^3.14.0",
    "chai": "^4.3.6",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "ethereum-waffle": "^3.4.4",
    "ethereumjs-tx": "^2.1.2",
    "ethereumjs-util": "^7.1.4",
    "ethers": "^5.6.5",
    "hardhat": "^2.9.3",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-deploy": "^0.11.4",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.7.0",
    "typechain": "^8.0.0"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "hardhat-ethernal": "^1.0.0",
    "typescript": "^4.6.4"
  }
}
